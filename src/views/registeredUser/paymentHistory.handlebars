<link rel="stylesheet" type="text/css" href="css/select2-mat-fix.css">

<div class="container" ng-app="energy-monitor" ng-controller="PaymentHistoryCtrl">
    <div class="row">
        <div class="col m6">
            <h3 class="page-header">Payment History</h3>
        </div>
    </div>

    <div class="row">
        <div class="col m4 input-field">
            <label for="startDate">From</label>
        </div>
        <div class="col m4 input-field">
            <label for="endDate">To</label>
        </div>
        <div class="col m4 input-field">
            <label for="connection">Connection</label>
        </div>
    </div>

    <div class="row">
        <div class="col m4 input-field">
            <input class="" id="startDate" ng-model="start_d" type="date"/>
        </div>
        <div class="col m4 input-field">
            <input class="" id="endDate" ng-model="end_d" type="date"/>
        </div>
        <div class="col m4 input-field">
            <select name="connection" id="connection" multiple="multiple" ng-model="selectedConnections">
                <option ng-repeat="con in connections track by $index">[[con]]</option>
            </select>
        </div>
    </div>

    <div class="row">
        <div class="col m3 offset-m5">
            <a class="waves-effect waves-light btn" href="" ng-click="updateTable()">Filter</a>
        </div>
    </div>

    <div class="row">
        <table>
            <thead>
                <tr>
                    <th>Connection</th>
                    <th>Date</th>
                    <th>Amount</th>
                </tr>
            </thead>

            <tbody>
                <tr ng-repeat="record in records track by $index">
                    <td>[[record.account_no]]</td>
                    <td>[[record.pay_date.substring(0,10)]]</td>
                    <td>[[record.amount]]</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<script src="js/paymentHistoryRegistered.js"></script>