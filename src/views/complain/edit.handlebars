<h1>Complain - edit</h1>
<form method="post" action="/complain/edit/{{value.id}}">
    <div class="row">
        <blockquote class="red lighten-5">
            {{#if message}}
                {{#each message}}
                    {{this.msg}} <br>
                {{/each}}
            {{/if}}
        </blockquote>
        <div class="input-field col s8 m8 l8">
            <i class="material-icons prefix mdi-action-dns"></i>
            <input type="text" name="title" value="{{value.title}}">
            <label for="title">Title</label>
        </div>
        <div class="input-field col s8 m8 l8">
            <i class="material-icons prefix mdi-action-description"></i>
            <textarea name="description" class="materialize-textarea">{{value.description}}</textarea>
            <label for="description">Description</label>
        </div>
        <div class="input-field col s8 m8 l8">
            <i class="material-icons prefix mdi-action-turned-in-not"></i>
            <div class="input-field col offset-m1 offset-l1 m6 s6 l6">
                <select style="padding-left: 30px;" name="category">
                    {{!-- selected showing is not working --}}
                    <option value="" disabled selected>Select Complain Category</option>
                    <option value="1">Dim Light</option>
                    <option value="2">Connection Down</option>
                    <option value="3"></option>
                </select>
            </div>
        </div>
    </div>
    <div class="row">
    </div>
    <input type="hidden" name="id" value="{{value.id}}">
    <button class="waves-effect btn teal" type="submit">Edit</button>
</form>
</div>