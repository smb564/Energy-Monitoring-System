<h1>Breakdown Update</h1>
<ul>
    <li>
        <h5>Area :</h5>
        <dt style="margin-left:30px;">{{breakDown.name}}</dt>
    </li>
    <li>
        <h5>Description :</h5>
        <dt style="margin-left:30px;">{{breakDown.description}}</dt>
    </li>
</ul>
<div class="light-blue lighten-4">
    <div class="row">
        <form class="col s12" action="/updateBreakDown/{{breakDown.id}}" name="update" method="post" onsubmit="return validateUpdate()">
            <div class="row">
                <div class="input-field col s12">
                    <textarea id="remarks" class="materialize-textarea" name="remarks">{{breakDown.status}}</textarea>
                    <label for="remarks">Remarks</label>
                </div>
            </div>
            <div class="row col s12 offset-s4">
                <div class="col s12 ">
                    <p><input name="group1" type="radio" id="t1" value="test1"/><label for="t1">Finished</label></p>
                    <p><input name="group1" type="radio" id="t2" value="test2" checked/><label for="t2">Not
                        Finished</label></p>
                </div>

            </div>
            <div class="row col s12 offset-s4">
                <button class="submit btn col s2" type="submit">Update</button>
            </div>
        </form>
    </div>

</div>
<script src="/js/breakDownValidator.js"></script>