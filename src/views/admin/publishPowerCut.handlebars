<link rel="stylesheet" href="css/select2-mat-fix.css" type="text/css">
<div>
<div class="container" ng-controller="PowerCutController">
    <div class="row">
        <div class="col-md-12">
            <h3>Publish Power Cut</h3>
        </div>
    </div>

    <div class="row">
        <form class="col-md-12" action="">
            <div class="row">
                <div class="form-group col-md-6">
                    <label for="from_datetime">From</label>
                </div>

                <div class="form-group col-md-6">
                    <label for="to_datetime">To</label>
                </div>

            </div>

            <div class="row">
                <div class="form-group col-md-3">
                    <input id="from_datetime1" type="date" ng-model="start_d" class="form-control"/>
                </div>
                <div class="form-group col-md-3">
                    <input id="from_datetime2" type="time" ng-model="start_t" class="form-control"/>
                </div>

                <div class="form-group col-md-3">
                    <input id="to_datetime3" type="date" ng-model="to_d" class="form-control"/>
                </div>
                <div class="form-group col-md-3">
                    <input id="to_datetime" type="time" ng-model="to_t" class="form-control"/>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-md-12">
                    <label for="description">Description</label>
                    <textarea ng-model="description" id="description" length="45" class="form-control"></textarea>

                </div>
            </div>

            <div class="row">
                <div class="form-group col-md-5 col-md-offset-3">
                    <label for="area">Area</label>
                </div>

            </div>


            <div class="row">
                <div class="form-group col-md-5 col-md-offset-3">
                    <select name="area" ng-model="newArea" id="area" type="text">
                        <option ng-repeat="area in allAreas track by $index">[[area]]</option>
                    </select>
                </div>

                <div class="col m1 section"><button onclick="return false;" ng-click="addNewArea()" class="btn-floating btn-small waves-effect waves-light red"><i class="material-icons">add</i></button></div>
            </div>

            <div class="row">
                <div class="col-md-10 col-md-offset-1">
                    <ul class="collection">
                        <div ng-repeat="area in areas track by $index">
                            <li class="collection-item">
                                <div>[[area]]<a href="#!" class="secondary-content"><i ng-click="removeArea($index)"
                                                                                       class="fa fa-close"
                                                                                       style="color:red;">not_interested</i></a>
                                </div>
                            </li>
                        </div>

                    </ul>
                </div>
            </div>

            <div class="row">
                <div class="col-md-3 col-md-offset-4">
                    <a class="waves-effect waves-light btn blue" ng-click="publish()">Publish</a>
                </div>
            </div>
        </form>
    </div>
</div>
</div>

<script src="js/publishPowerCut.js"></script>