<h2 class="center-align">Break Downs Reported</h2>
<div class="row">
    <h4>Sort Method
    <!--label for="dropButton" class="regular"> </label-->
    <!-- Dropdown Trigger -->
    <a id="dropButton" class='dropdown-button btn' href='#' data-activates='dropdown2'><span style="font-size:20px">Choose<i class="material-icons">play_for_work</i></span></a></h4>
    <!-- Dropdown Structure -->
    <ul id='dropdown2' class='dropdown-content'>
        <li><a href="#!">Sort by Date</a></li>
        <li class="divider"></li>
        <li><a href="#!">Sort by Area</a></li>
        <li class="divider"></li>
        <li><a href="#!">Not Finished</a></li>
    </ul>
</div>

<div class="row">
    {{#each array}}
        <div>
            <div class="col s12 m6">
                <div class="card blue-grey darken-1">
                    <div class="card-content white-text">
                        <span class="card-title">{{area}}</span>
                        <p>{{description}}</p>
                    </div>

                    <div class="card-action">
                        <a>{{dateTime}}</a>
                        {{getType finished}}

                    </div>
                </div>
            </div>
        </div>
    {{/each}}
</div>
